@model PROJETAKIP.Models.Personel.PersonelBilgileri

@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="card mb-4">
            <h5 class="card-header">Personel Ekle</h5>

            <hr class="my-0">
            <div class="card-body">
                <form id="formAccountSettings" method="POST" onsubmit="return false">
                    <div class="row">

                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.AdSoyad, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-user"></i></span>

                                <input class="form-control" type="text" id="AdSoyad" name="AdSoyad" value="" autofocus="">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.PersonelGorseli, htmlAttributes: new { @class = "control-label col-md-6" })

                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-fullname2" class="input-group-text"><i class="bx bx-image"></i></span>

                                <input class="form-control" type="text" id="PersonelGorseli" name="PersonelGorseli" value="">
                            </div>
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.EPosta, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                <input class="form-control" type="email" name="Eposta" id="Eposta" value="">
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Departman, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-buildings"></i></span>
                                <select name="Departman" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Yazılım">Yazılım</option>
                                    <option value="Satış">Satış</option>
                                    <option value="Yönetim">Yönetim</option>
                                    <option value="Üretim">Üretim</option>
                                    <option value="Satın Alma">Satın Alma</option>
                                    <option value="Kalite">Kalite</option>
                                    <option value="Muhasebe">Muhasebe</option>
                                    <option value="IK">IK</option>
                                    <option value="İş Geliştirme">İş Geliştirme</option>
                                </select>
                            </div>

                        </div>

                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Gorev, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-alarm"></i></span>

                                <select name="Gorev" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Backend Developer">Backend Developer</option>
                                    <option value="Frontend Developer">Frontend Developer</option>
                                    <option value="Fullstack Developer">Fullstack Developer</option>
                                    <option value="IT Sorumlusu">IT Sorumlusu</option>
                                    <option value="Yazılım Takım Lideri">Yazılım Takım Lideri</option>
                                    <option value="Proje Yöneticisi">Proje Yöneticisi</option>
                                    <option value="Genel Müdür">Genel Müdür</option>
                                    <option value="Genel Müdür Yardımcısı">Genel Müdür Yardımcısı</option>
                                    <option value="CEO">CEO</option>
                                    <option value="Fabrika Müdürü">Fabrika Müdürü</option>
                                    <option value="Yönetim Temsilcisi">Yönetim Temsilcisi</option>
                                    <option value="Dış Ticaret Sorumlusu">Dış Ticaret Sorumlusu</option>
                                    <option value="Satın Alma Personeli">Satın Alma Personeli</option>
                                    <option value="Kalite Personeli">Kalite Personeli</option>
                                    <option value="Muhasebe Personeli">Muhasebe Personeli</option>
                                    <option value="IK Personeli">IK Personeli</option>
                                    <option value="İş Geliştirme Personeli">İş Geliştirme Personeli</option>
                                </select>
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.TCNO, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-alarm"></i></span>
                                <input class="form-control" type="text" id="TCNO" name="TCNO" value="">
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Yetki, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-adjust"></i></span>

                                <select name="Yetki" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Üst Yönetim">Üst Yönetim</option>
                                    <option value="Yönetim">Yönetim</option>
                                    <option value="Normal">Normal</option>

                                </select>
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.TelNO, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-phone2" class="input-group-text"><i class="bx bx-phone"></i></span>
                                <input class="form-control" type="tel" id="TelNO" name="TelNO" value="">
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Adres, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-map"></i></span>
                                <input class="form-control" type="text" id="Adres" name="Adres" value="">
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.DogumTarihi, htmlAttributes: new { @class = "control-label col-md-2" })

                            <input class="form-control" type="datetime-local" id="DogumTarihi" name="DogumTarihi" value="">
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.IseGirisTarihi, htmlAttributes: new { @class = "control-label col-md-6" })

                            <input class="form-control" type="datetime-local" id="IseGirisTarihi" name="IseGirisTarihi" value="">
                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.MedeniHal, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-select-multiple"></i></span>

                                <select name="MedeniHal" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Bekar">Bekar</option>
                                    <option value="Evli">Evli</option>


                                </select>
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.Sifre, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-paste"></i></span>
                                <input class="form-control" type="password" id="Sifre" name="Sifre" value="">
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.PozisyonAciklama, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-message2" class="input-group-text"><i class="bx bx-comment"></i></span>
                                <input class="form-control" type="text" id="PozisyonAciklama" name="PozisyonAciklama" value="">
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.YakınBilgisi, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-bookmark"></i></span>
                                <select name="YakınBilgisi" class="form-control" required>
                                    <option value="Seçiniz">Seçiniz</option>
                                    <option value="Eşi">Eşi</option>
                                    <option value="Babası">Babası</option>
                                    <option value="Annesi">Annesi</option>
                                    <option value="Kardeşi">Kardeşi</option>
                                    <option value="Çocuğu">Çocuğu</option>
                                    <option value="Diğer">Diğer</option>


                                </select>
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.YakınAdSoyad, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-bookmark"></i></span>
                                <input class="form-control" type="text" id="YakınAdSoyad" name="YakınAdSoyad" value="">
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.YakınTC, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-bookmark"></i></span>
                                <input class="form-control" type="text" id="YakınTC" name="YakınTC" value="">
                            </div>

                        </div>
                        <div class="mb-3 col-md-6">
                            @Html.LabelFor(model => model.YakınTel, htmlAttributes: new { @class = "control-label col-md-6" })
                            <div class="input-group input-group-merge">
                                <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-phone"></i></span>
                                <input class="form-control" type="text" id="YakınTel" name="YakınTel" value="">
                            </div>

                        </div>
                    </div>
                    <div class="mt-2">
                        <button type="submit" class="btn btn-primary me-2">Personel Oluştur</button>
                        <a href="/PersonelBilgileris/Index/" class="btn btn-outline-secondary">Anasayfaya Dön</a>
                    </div>
                </form>
            </div>
            <!-- /Account -->
        </div>





    </div>
}



