@model IEnumerable<PROJETAKIP.Models.Personel.PersonelBilgileri>

@{
    ViewBag.Title = "PersonelKart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">

    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row">
                @foreach(var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-header text-muted border-bottom-0">
                            @item.Departman
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.AdSoyad</b></h2>
                                    <p class="text-muted text-sm"><b>About: </b> @item.Gorev </p>
                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                        <li class="small"><span class="fa-li"><i class="bx bx-envelope"></i></span> Mail: @item.EPosta</li>
                                        <li class="small"><span class="fa-li"><i class="bx bx-phone"></i></span> Telefon:@item.TelNO</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="@item.PersonelGorseli" alt="user-avatar" class="rounded-circle" style="height:100px; width:100px;">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <a href="mailto:@item.EPosta" class="btn btn-sm btn-primary">
                                    <i class="fas fa-comments"></i>Mail
                                </a>
                                <a href="tel:@item.TelNO" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Ara
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
                
            </div>
        </div>

    </div>

</section>
